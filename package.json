  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mrdulin/apollo-graphql-tutorial/issues"
  },
  "homepage": "https://github.com/mrdulin/apollo-graphql-tutorial#readme",
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
